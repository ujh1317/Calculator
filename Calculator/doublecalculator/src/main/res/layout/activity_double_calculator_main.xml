<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#E5E5E5"
    tools:context=".DoubleCalculatorMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="100"
        android:background="#E5E5E5">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">

            <TextView
                android:id="@+id/result_operator_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp" />
        </ScrollView>

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical|right"
            android:text="0"
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#676767" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/all_clear_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="C"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/clear_entry_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="CE"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/back_space_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="⌫"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/operator_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="/"
                android:text="÷"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="7"
                android:text="7"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="8"
                android:text="8"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="9"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/operator_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="*"
                android:text="×"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="4"
                android:text="4"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="5"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="6"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/operator_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="-"
                android:text="-"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="1"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="2"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="3"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/operator_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="+"
                android:text="+"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.example.doublecalculator.NumberButton
                android:id="@+id/number_button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:tag="0"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.example.doublecalculator.NumberButton
                android:id="@+id/decimal_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:tag="."
                android:text="."
                android:textSize="40sp"/>

            <com.example.doublecalculator.OperatorButton
                android:id="@+id/operator_button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:tag="="
                android:text="="
                android:textSize="30dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>